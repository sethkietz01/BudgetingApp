@model BudgetingApp.Models.TransactionModel
@{
    ViewData["Title"] = "Add Transaction";
}


<h2>Add New Transaction</h2>
<form asp-controller="Home" asp-action="AddTransaction" method="post" id="new-transaction-form">
    <div class="form-group transaction-form-group">
        <input type="text" asp-for="Username" value="temp" hidden />
        <input type="text" asp-for="DocumentId" value="temp" hidden />

        <div class="form-group transaction-input">
            <label asp-for="Date" class="control-label">Date</label>
            <input type="date" asp-for="Date" class="form-control" id="transaction-date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group transaction-input">
            <label asp-for="Merchant" class="control-label">Merchant</label>
            <input type="text" asp-for="Merchant" class="form-control" />
            <span asp-validation-for="Merchant" class="text-danger"></span>
        </div>
        <div class="form-group transaction-input">
            <label asp-for="Category" class="control-label">Category</label>
            <select asp-for="Category">
                <option value="CarPayment">Car Payment</option>
                <option value="Gas">Gas</option>
                <option value="Groceries">Groceries</option>
                <option value="Insurances">Insurances</option>
                <option value="Other">Other</option>
                <option value="Rent">Rent</option>
                <option value="Subscriptions">Subscriptions</option>
                <option value="Utilities">Utilities</option>
            </select>
            <span asp-validation-for="Merchant" class="text-danger"></span>
        </div>
        <div class="form-group transaction-input">
            <label asp-for="Amount" class="control-label">Amount</label>
            <input type="number" step="0.01" asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group transaction-button-group">
        <button id="submit-new-transaction-button" type="submit" class="button">Add Transaction</button>
    </div>
</form>

<script>
    // Populate the date input with the current date
    document.addEventListener('DOMContentLoaded', function() {
        const dateInput = document.getElementById('transaction-date'); // Get the date input

        // If the date input exists 
        if (dateInput) {
            // Get today's date
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0'); 
            const day = String(today.getDate()).padStart(2, '0');

            // Populate date input with today's date
            dateInput.value = `${year}-${month}-${day}`;
        }
    });
</script>